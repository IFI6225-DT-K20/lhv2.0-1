// Base
:root
    box-sizing: border-box
    min-height: 100%
    // cursor: pointer

*
    &,
    &:before,   
    &:after
        box-sizing: border-box
        margin: 0


body
    margin 0
    padding 0
    height 100%
    font-family: 'Neue Helvetica W06', 'Helvetica Neue', sans-serif
    font-size: 16px
    line-height: 26px  
    font-weight 400
    letter-spacing: 0
    color: #00000f

@media (min-width 1200px)
    .container {
        width: 1170px
    }